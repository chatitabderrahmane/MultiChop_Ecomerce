@model Category
@{
    ViewData["Title"] = "Edit";
}



<form method="post"  asp-action="Edit" enctype="multipart/form-data">

<div asp-validation-summary="All" class="mb-3 bg-danger"  >

</div>
<div class="mb-3">
    <input asp-for="Id" hidden />
    <input asp-for="Image" hidden />

   
 
  <label for="exampleFormControlInput1" class="form-label">Name</label>
  <input type="text" asp-for="Name" class="form-control"  placeholder=" ">
  <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Min Description</label>
    <textarea class=" form-control" asp-for="MiniDescription" id="exampleFormControlTextarea1" rows="3"></textarea>
    <span asp-validation-for="MiniDescription" class="text-danger"></span>
</div>
<div class="mb-3">
  <label   class="form-label"> Image </label>
   <input type="file" asp-for="Image" name="file" />
    <img src="/Areas/Admin/Images/Categories/@Model.Image" class="img-bordered"  style="width:50px" />
    <span asp-validation-for="Image" class="text-danger"></span>
</div>
<button type="submit" class="btn btn-primary">Edit</button>
<button asp-action="Index" class="btn btn-default">Back To List </button>
</form>

@section Scripts{
    @{
 <script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'advlist autolink lists link image charmap preview anchor pagebreak',
      toolbar_mode: 'floating',
    });
  </script>
        <partial name="_ValidationScriptsPartial"/>
    }
}