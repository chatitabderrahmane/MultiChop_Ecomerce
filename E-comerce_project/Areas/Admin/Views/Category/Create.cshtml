@model Category
@{
    ViewData["Title"] = "Create";
}



<form method="post"  asp-action="Create" enctype="multipart/form-data">

<div asp-validation-summary="All" class="mb-3 bg-danger"  >

</div>
<div class="mb-3">
 
  <label for="exampleFormControlInput1" class="form-label">Name</label>
  <input type="text" asp-for="Name" class="form-control"  placeholder=" ">
  <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Min Description</label>
    <textarea class=" form-control" asp-for="MiniDescription" ></textarea>
    <span asp-validation-for="MiniDescription" class="text-danger"></span>
</div>
<div class="mb-3">
  <label   class="form-label">  Image </label>
   <input type="file" asp-for="Image" name="file" class="form-controler" />
    <span asp-validation-for="Image" class="text-danger"></span>
</div>
<button type="submit" class="btn btn-primary">Create</button>
<button asp-action="Index" class="btn btn-default">Back To List </button>
</form>

