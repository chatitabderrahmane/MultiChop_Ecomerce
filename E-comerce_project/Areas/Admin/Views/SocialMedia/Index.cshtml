 @model  SocialMedia

  <h1> Tamplates of Social Media </h1>
 
<form  method="post" asp-action="Edit">
  <div class="form-group row">
    <label   class="col-sm-2 col-form-label"><i class="display-4 text-primary fab fa-twitter"></i> </label>
    <div class="col-sm-10">
         <input type="text" required class="form-control"  asp-for="twitter" >

    </div>
  </div>

 

 <div class="form-group row">
    <label   class="col-sm-2 col-form-label"> <i  class="display-4 text-primary fab fa-facebook-f"></i></label>
    <div class="col-sm-10">
             <input type="text"required asp-for="facebook" class="form-control" >


    </div>
  </div>
        <div class="form-group row">
    <label   class="col-sm-2 col-form-label"><i class="display-4 text-primary fab fa-linkedin-in"></i></label>
    <div class="col-sm-10">
            <input type="text"required asp-for="linkedin"  class="form-control" >
 </div>
  </div>

  <div class="form-group row">
    <label   class="col-sm-2 col-form-label"> <i class="display-4 text-primary fab fa-instagram"></i></label>
    <div class="col-sm-10">
           <input type="text" required asp-for="instagram"  class="form-control" >
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Edit Links</button>
</form>